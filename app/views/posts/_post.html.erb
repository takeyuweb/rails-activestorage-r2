<div id="<%= dom_id post %>">
  <p>
    <strong>Name:</strong>
    <%= post.name %>
  </p>
  <p>
    <strong>Image:</strong>
    <% if post.image.attached? %>
      <%= link_to rails_blob_path(post.image) do %>
        <%= image_tag post.image.variant(:thumb) %>
      <% end %>
    <% end %>
  </p>

</div>
